<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="example.com.youngjung.mysql_test_160808.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상대방 이름 :"
        android:id="@+id/name"
        android:textSize="30dp"
        android:layout_marginTop="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호 :"
        android:id="@+id/tel"
        android:textSize="30dp"
        android:layout_marginBottom="96dp"
        android:layout_above="@+id/num"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차량번호 :"
        android:id="@+id/num"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="188dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_name"
        android:layout_alignBottom="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#0e0d0d" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_tel"
        android:layout_alignTop="@+id/tel"
        android:layout_toRightOf="@+id/tel"
        android:layout_alignRight="@+id/edit_name"
        android:layout_alignEnd="@+id/edit_name"
        android:textColor="#0e0d0d" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_carnum"
        android:layout_alignBottom="@+id/num"
        android:layout_toRightOf="@+id/num"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#0e0d0d" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:id="@+id/btn_ok"
        android:onClick="Click"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/num"
        android:layout_toEndOf="@+id/num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/edit_carnum"
        android:layout_alignLeft="@+id/btn_ok"
        android:layout_alignStart="@+id/btn_ok"
        android:layout_marginTop="48dp" />

</RelativeLayout>